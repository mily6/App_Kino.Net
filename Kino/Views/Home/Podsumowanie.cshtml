@using Kino.Data.Models;
@model Zamowienie

<h1 class="text-center">Podsumowanie zamówienia</h1> <!-- wyswietlanie danych na stronie z podsumowaniem-->

<table class="table">
    <tr>
        <td>Seans</td>
        <td>@Model.Seans.Film.Tytul</td>
    </tr>
        <tr>
        <td>Data seansu</td>
        <td>@Model.Seans.Data</td>
    </tr>
    <tr>
        <td>Imie zamawiającego</td>
        <td>@Model.Imie</td>
    </tr>
    <tr>
        <td>Nazwisko zamawiającego</td>
        <td>@Model.Nazwisko</td>
    </tr>
    <tr>
        <td>Email zamawiającego</td>
        <td>@Model.Mail</td>
    </tr>
    <tr>
        <td>Płatność</td>
        <td>@Model.Platnosc</td>
    </tr>
    <tr>
        <td>Rząd</td>
        <td>@ViewBag.Miejsce.Rzad</td>
    </tr>
    <tr>
        <td>Miejsce</td>
        <td>@ViewBag.Miejsce.NrMiejsca</td>
    </tr>
    <tr>
        <td>Ulga</td>
        <td>@Model.Ulga</td>
    </tr>
    <tr>
        <td>Cena</td>
        <td>@ViewBag.Cena zł</td>
    </tr>
    <tr>
        <td>Status zamówienia</td>
        <td>@Model.Status</td>
    </tr>
</table>

@if(Model.Status == "Niepotwierdzone") //jezeli status jest niepotwierdzony 
{
<div class="text-center">
    @if (Model.Platnosc == "online")
    {
        <a asp-action="Potwierdzenie" asp-route-guid="@Model.Guid"><button class="btn btn-success">Zamawiam i płacę</button></a> //mozliwosc zaplacenia

    }
    else
    {
        <a asp-action="Potwierdzenie" asp-route-guid="@Model.Guid"><button class="btn btn-success">Zamawiam</button></a> //mozliwosc zamowienia
    }
</div>
}


